CREATE TABLE productos (
	id int(11) PRIMARY KEY AUTO_INCREMENT,
    nombre varchar(15),
    descripcion varchar(100),
    precio float(7,2),
    imagen varchar(30),
    oferta tinyint(1),
    fecha date
);